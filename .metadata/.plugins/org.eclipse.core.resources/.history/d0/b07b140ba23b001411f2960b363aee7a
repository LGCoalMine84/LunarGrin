<project name="ProjectFreedomMacros" xmlns:unless="ant:unless">
	
	<!--
		Macro for generating C# documentation.
	-->
	<macrodef name="projectFreedom.generateDocumentation" description="Installs Doxygen">
		<sequential>
		  	
			<doxygen.generateCSharpDocumentation doxygenBase.dir="${doxygenBase.dir}" output.dir="${projectFreedom.build.dir}"
												 source.dir="${basedir}/Assets/Source" />
			
		</sequential>
	</macrodef>
	
</project>